
<div class="w-1/2 mx-auto relative" data-controller="blackjack"> 
	<div class="">
		<h2 class="mb-2">DEALER</h2>
		<div class="mb-2">
			<%= image_tag "img_play-field_dealer-icon.png", width: "75px", class: "mx-auto"%>
		</div>
		<div id="dealer-field" class="flex justify-center mb-2">
			<div class="w-20" data-controller="card-holder"><%= image_tag "dealer_card-#{@dealerFirstNum}.png" %></div>
			<div class="w-20 card-holder" data-controller="card-holder"><%= image_tag "dealer_card-0.png" %></div>
			<div class="w-20 card-holder hidden"></div>
			<div class="w-20 card-holder hidden"></div>
			<div class="w-20 card-holder hidden"></div>
			<div class="w-20 card-holder hidden"></div>
			<div class="w-20 card-holder hidden"></div>
			<div class="w-20 card-holder hidden"></div>
		</div>
		<div class="flex justify-center mx-auto mb-2">
			<p id="dealer-total"><%= @dealerTotal %></p>
			<div id="dealer-hidden" class="flex">
				<p class="mx-4">or</p>
				<p id="dealer-total-ace"><%= @dealerWithAce %></p>
			</div>
		</div>
	</div>
	<div class="flex justify-around my-10">
		<p id="hit">Hit</p>
		<p id="stand">Stand</p>
	</div>
	<div class="">
		<div class="flex justify-center mx-auto mb-2">
			<p id="player-total"><%= @userTotal %></p>
			<div id="player-hidden" class="flex">
				<p class="mx-4">or</p>
				<p id="player-total-ace"><%= @userWithAce %></p>
			</div>
		</div>
		<div id="player-field" class="flex justify-center mb-2" data-controller="card_holder">
			<div class="w-20" data-controller="card-holder"><%= image_tag "player_card-#{@userFirstNum}.png" %></div>
			<div class="w-20 " data-controller="card-holder"><%= image_tag "player_card-#{@userSecondNum}.png" %></div>
			<div class="w-20 card-holder hidden"></div>
			<div class="w-20 card-holder hidden"></div>
			<div class="w-20 card-holder hidden"></div>
			<div class="w-20 card-holder hidden"></div>
			<div class="w-20 card-holder hidden"></div>

		</div>
		<div class="mb-2">
			<%= image_tag "img_play-field_user-icon.png", width: "75px", class: "mx-auto"%>
		</div>
		<h2 id="test">YOU</h2>
	</div>
	<%# add flex class to display %>
	<div id="result" class="absolute top-5 left-0 hidden flex-col justify-center h-80 w-full bg-rose-400 rounded-3xl opacity-90">
		<h2 class="mb-8">YOU LOSE</h2>
		<div class="mx-auto w-40 h-10 bg-black rounded-xl hover:bg-white"><%= link_to "Play Again", playField_path, class: "block leading-10 w-full h-full text-white hover:text-black" %></div>
	</div>
</div>